find --set-root --ignore-floppies /easyPcRecovery/clonezilla/hotkey && /easyPcRecovery/clonezilla/hotkey
# clear the display to keep it clean!
clear
# allow text output from any future commands  so we can debug the menu items
debug on

timeout 25
default 0

title ^F3 F3 Boot Windows XP
find --set-root --devices=h /ntldr
chainloader /ntldr

title ^F4 F4 Windows XP recovery console
find --set-root /cmldr
chainloader /cmldr
########################################################
# write string "cmdcons" to memory 0000:7C03 in 2 steps:
########################################################
# step 1. Write 4 chars "cmdc" at 0000:7C03
write 0x7C03 0x63646D63
# step 2. Write 3 chars "ons" and an ending null at 0000:7C07
write 0x7C07 0x00736E6F 

title ^F5 F5 Boot Windows Vista or Windows 7
find --set-root --devices=h /bootmgr
chainloader /bootmgr

title ^F6 F6 Boot from CD
chainloader (cd)
rootnoverify (cd) 

title ^F7 F7 Boot from USB (even if you BIOS doesn´t allow it)
find --set-root --ignore-floppies   /easyPcRecovery/extras/plop/plpbt.bin
kernel /easyPcRecovery/extras/plop/plpbt.bin hiddenusb usb1=2

title ^F8 F8 Boot SliTaz 4.0
find --set-root --ignore-floppies   /easyPcRecovery/extras/slitaz/slitaz-4.0.iso 
map /easyPcRecovery/extras/slitaz/slitaz-4.0.iso (0xff) || map --mem /slitaz/slitaz-4.0.iso (0xff)
map --hook root (0xff)
chainloader (0xff)
