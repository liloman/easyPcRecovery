#load key mappings
find --set-root --ignore-floppies /easyPcRecovery/clonezilla/hotkey 

timeout 1
default 0

title Boot Windows (XP)
find --set-root --devices=h /ntldr
chainloader /ntldr

title ^F4 F4 Recover PC (SATA)
find --set-root --ignore-floppies /easyPcRecovery/menus/submenu.lst
configfile /easyPcRecovery/menus/submenu.lst

title ^F5 F5 Recover PC (IDE)
find --set-root --ignore-floppies /easyPcRecovery/menus/submenu-IDE.lst
configfile /easyPcRecovery/menus/submenu-IDE.lst
